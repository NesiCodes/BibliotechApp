<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/BookImage"
                android:layout_width="182dp"
                android:layout_height="273dp"
                android:src="@drawable/image_placeholder_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/BookNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Emri"
                android:hint="Emri"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/BookImage"
                app:layout_constraintTop_toTopOf="parent"/>


            <EditText
                android:id="@+id/BooksCountTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sasia"
                android:hint="Sasia"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/BookImage"
                app:layout_constraintTop_toBottomOf="@+id/BookNameTxt"  />


            <EditText
                android:id="@+id/AuthorNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Autori"
                android:hint="Autori"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/BookImage"
                app:layout_constraintTop_toBottomOf="@+id/BooksCountTxt" />


            <EditText
                android:id="@+id/BooksLocationTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Vendndodhja"
                android:hint="Vendndodhja"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/BookImage"
                app:layout_constraintTop_toBottomOf="@+id/AuthorNameTxt" />


            <Button
                android:id="@+id/UpdateDataBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Update Data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toEndOf="@+id/BookImage"
                app:layout_constraintTop_toBottomOf="@+id/BooksLocationTxt" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>